rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone with access to your Firestore database to read,
    // write, and delete all data in your Firestore database.
    // Make sure you update this rule to secure your database before going to
    // production.
    // For more information, see the Firestore security rules documentation:
    // https://firebase.google.com/docs/firestore/security/get-started
    match /{document=**} {
      allow read, write: if true;
    }
  }
}